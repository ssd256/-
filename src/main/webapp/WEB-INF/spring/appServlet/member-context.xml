<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xmlns:context="http://www.springframework.org/schema/context"
   xmlns:mvc="http://www.springframework.org/schema/mvc"
   xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd
      http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
      http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context-4.3.xsd">

   <mvc:annotation-driven />
   
   <mvc:resources mapping="/resource/**" location="/resources/"/>
   
   <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
      <property name="prefix" value="/WEB-INF/views/member/" />
      <property name="suffix" value=".jsp" />
   </bean>
   
   <context:component-scan base-package="com.kh.green" />
	
	
	<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/login.me"/>
			<bean id="MemberInerceptor" class="com.kh.green.common.interceptor.MemberInterceptor"/>
		</mvc:interceptor>
		<mvc:interceptor>
			<mvc:mapping path="/memberInfo.me"/>
			<mvc:mapping path="/memberDeleteForm.me"/>
			<mvc:mapping path="/memberPwdUpdate.me"/>
			<mvc:mapping path="/memberSharesList.me"/>
			<mvc:mapping path="/memberVolunteerList.me"/>
			<mvc:mapping path="/mVolunteerDetail.me"/>
			<bean id="UserCheckInterceptor" class="com.kh.green.common.interceptor.UserCheckInterceptor"/>
		</mvc:interceptor>
		<mvc:interceptor>
			<mvc:mapping path="/reportPage.me"/>
			<mvc:mapping path="/adminPage.me"/>
			<bean id="AdminCheckInterceptor" class="com.kh.green.common.interceptor.AdminCheckInterceptor"/>
		</mvc:interceptor>
	</mvc:interceptors>
</beans>